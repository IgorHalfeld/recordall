{
  "name": "recordall",
  "version": "0.1.0",
  "description": "Simple and powerful chrome extension to record screens",
  "main": "src/js/main.js",
  "contributors": [
    "Igor Lu√≠z <igor@devstacks.com.br>"
  ],
  "scripts": {
    "start": "./node_modules/.bin/npm-run-all --parallel build gulp-tasks",
    "gulp-tasks": "./node_modules/.bin/gulp",
    "build": "npm run browserify && npm run uglify",
    "browserify": "./node_modules/.bin/watchify -vd -p browserify-hmr -e src/js/app.js -o app/dist/app.js",
    "uglify": "./node_modules/.bin/uglifyjs dist/app.js -o dist/app.min.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "keywords": [
    "stackrec",
    "screencast",
    "record",
    "screen"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "browserify-hmr": "^0.3.5",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-vue": "^2.0.1",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gulp": "^3.9.1",
    "gulp-sass": "^2.3.2",
    "gulp-zip": "^3.2.0",
    "npm-run-all": "^4.0.2",
    "pug": "^0.1.0",
    "uglifyjs": "^2.4.10",
    "vueify": "^9.3.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "event-emitter": "^0.3.4",
    "vue": "^2.1.8"
  }
}
